<body>
    <div class="wrapper">
        <div class="inner">
            <div class="image-holder">
                <img src="https://hoavily.com/uploads/file/hoa%20tulip%20hong/%C3%BD-nghia-hoa-tulip-hong.jpg" alt>
            </div>
            <form id="registrationForm" action="@Url.Action("Login", "Account")" method="post">
                <h3>Shop Hoa Tươi Loopple</h3>
                <div style="margin-bottom: 12px">
                    <label for="UserName" style="font-size: 16px;">Đăng nhập bằng số điện thoại</label>
                </div>
                <div class="form-holder active">
                    <input type="tel" class="form-control" id="UserName" name="UserName" placeholder="Nhập số điện thoại" required>
                    <span id="phoneError" class="error"></span>
                </div>
                <div style="margin: 15px 0 12px 0">
                    <label for="Password" style="font-size: 16px;">Mật khẩu</label>
                </div>
                <div class="form-holder">
                    <input type="password" id="Password" name="Password" placeholder="Nhập mật khẩu" class="form-control" style="font-size: 15px;" required>
                </div>
                <div></div>
                <div style="color:red; font-size:15px;">@Html.ValidationSummary()</div>
                <div></div>
                <div class="form-login">
                    <button type="submit">Đăng nhập</button>
                </div>
                <p style="font-size: 15px; margin-bottom:5px;"><a href="#">Quên mật khẩu?</a></p>
                <p style="font-size: 18px">
                    <span>Bạn chưa có tài khoản?</span><a href="@Url.Action("Register", "Account")"> Đăng ký ngay</a>
                </p>
            </form>
            <script>
                document.getElementById("registrationForm").addEventListener("submit", function(event) {
                    var phoneInput = document.getElementById("UserName");
                    var phoneError = document.getElementById("phoneError");

                    if (phoneInput.value.length !== 10) {
                        phoneError.textContent = "Số điện thoại phải đủ 10 số";
                        event.preventDefault(); // Ngăn không cho form submit
                    } else {
                        phoneError.textContent = "";
                    }
                });
            </script>
        </div>
    </div>
